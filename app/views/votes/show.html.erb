<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Vote #<%= @vote.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/votes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_vote/<%= @vote.id %>" class="btn btn-block btn-outline-secondary">
          Delete vote
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @vote.user_id %>
      </dd>

      <dt>
        Post
      </dt>
      <dd>
        <%= @vote.post_id %>
      </dd>

      <dt>
        Bestoutfit
      </dt>
      <dd>
        <%= @vote.bestoutfit_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@vote.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@vote.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit vote
    </h2>

    <form action="/modify_vote/<%= @vote.id %>"  method="post" >
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control" value="<%= @vote.user_id %>">
      </div>

      <div class="form-group">
        <label for="post_id_box">
          Post
        </label>

        <input type="text" id="post_id_box" name="post_id_from_query" class="form-control" value="<%= @vote.post_id %>">
      </div>

      <div class="form-group">
        <label for="bestoutfit_id_box">
          Bestoutfit
        </label>

        <input type="text" id="bestoutfit_id_box" name="bestoutfit_id_from_query" class="form-control" value="<%= @vote.bestoutfit_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update vote
      </button>
    </form>
  </div>
</div>

<hr>
