<style>

  .flex-pagerunner {
    display: inline-flex;
    width: 100%;
    padding-bottom: 8%;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-family: 'Nunito', sans-serif;
    font-weight: bold;
    color: Thistle;
  }

  .flex-postdetails {
    display: inline-flex;
    width: 100%;
    padding-top: 5%;
    flex-wrap: wrap;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-family: 'Nunito', sans-serif;
    font-weight: bold;
    color: Thistle;
  }

  .flex-user {
    display: inline-flex;
    width: 100%;
    padding-top: 5%;
    flex-wrap: wrap;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    font-family: 'Nunito', sans-serif;
    font-weight: bold;
    color: Thistle;
  }

  .avatar {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    border: medium #D8BFD8 solid;
  }

  .event-tag {
    border-radius: 8px;
    background: WhiteSmoke;
    padding-top: 5px;
    padding-bottom: 5px;
    width: 80px;
    height: 25px;
    vertical-align: center;
    text-align: center;
    margin: auto;
    font-family: 'Montserrat', sans-serif;
    font-weight: bold;
    color: Thistle;
    font-size: 10px;
  }

  .button {
    background-color: White; /* Blue background */
    border: none; /* Remove borders */
    cursor: pointer; /* Mouse pointer on hover */
}

  .edit-button {
    background-color: Thistle; 
    border: none; /* Remove borders */
    cursor: pointer; /* Mouse pointer on hover */
    color: White;
  }

  .btn-edit-profile {
    border-radius: 8px;
    background: Thistle;
    padding-top: 5px;
    padding-bottom: 5px;
    width: 80px;
    height: 25px;
    vertical-align: center;
    text-align: center;
    margin: auto;
    font-family: 'Montserrat', sans-serif;
    font-weight: bold;
    color: White;
    font-size: 10px;
  }

</style>

<% poster_username = @current_user.username %>
<% if @current_user.headshot_id == nil %>
  <% poster_avatar = "/default-avatar.png" %>
<% else %>
  <% poster_avatar = Headshot.where({ :id => @current_user.headshot_id }).first.image %>
<% end %>

<div class="container">

  <div class="row Running-Header">
    <div class="flex-pagerunner">
      <a href="/feed" style="font-size:200%; text-decoration: none;"> 
        <span style="color:Thistle;"> Looksy </span> 
      </a>
      <a href="/sign_out" style="font-size:80%; font-weight:lighter; color:Gray; text-decoration: none;">
        <span> Sign Out </span>
      </a>
    </div>
  </div>
  
  <hr>

  <div class="row Post-Panel">
    <div class="flex-user">
      <a href="/feed/<%= poster_username %>">
        <img src="<%= poster_avatar %>" class="avatar">
      </a>
      <span class="span-user" style="font-size:100%;"> <%= poster_username %> 
      </span>
      <div class="btn-edit-profile">
        <form action="/edit_user">
          <button class="edit-button"> Edit Profile </button>
        </form>
      </div>        
    </div>

    <% @posts.where({ :poster_id => @current_user.id }).each do |post| %>
        <% vote1 = Vote.where({ :voter_id => @current_user.id, :bestoutfit_id => post.outfit1_id }).first %>
        <% vote2 = Vote.where({ :voter_id => @current_user.id, :bestoutfit_id => post.outfit2_id }).first %>

        <% vote1_count = Vote.where({ :bestoutfit_id => post.outfit1_id }).all.count %>
        <% vote2_count = Vote.where({ :bestoutfit_id => post.outfit2_id }).all.count %>

        <% style1 = Outfit.where({ :id => post.outfit1_id }).first %>
        <% style1_image = style1.image %>

        <% style2 = Outfit.where({ :id => post.outfit2_id }).first %>
        <% style2_image = style2.image %>   

        <% post_event = Event.where({ :id => post.event_id }).first %>
        <% event_tag = post_event.tag %>


      <div class="flex-postdetails">
        <div class="col-xs-10">
          <span class="span-timestamp" style="font-size:80%"> <%= time_ago_in_words(post.created_at) %> ago </span>
        </div>
        <div class="col-xs-2">
          <div class="event-tag">
            <%= event_tag %>
          </div>
        </div>
      </div>
      <div class="col-xs-6" style="width:50%">
        <div class="card">
          <img src="<%= cloudinary_url(style1_image, :crop=>"fit")%>" class="card-img-top">
            <div class="card-body">
              <p class="card-text">
                <% if vote1 == nil && vote2 ==nil %>
                  <form action="/insert_vote" method="post">
                    <input type="hidden" value="<%= post.id %>" name="post_id_from_query">
                    <input type="hidden" value="<%= post.outfit1_id %>" name="bestoutfit_id_from_query">   
                    <button class="button"> <i class="fas fa-heart" style="color:#D8BFD8; font-size:25px;"> </i> </button>
                  </form>
                <% elsif vote1 == nil %>
                  <i class="far fa-heart" style="color:#D8BFD8; font-size:25px;"> </i>
                <% elsif vote1 != nil %>
                  <i class="fas fa-heart" style="color:#D8BFD8; font-size:30px;"> </i>
                <% end %>
              </p>
              <p class="card-text">
                <% if vote1_count > vote2_count %>
                  <span style="font-family:'Nunito', sans-serif; color:#D8BFD8; font-weight: bold; font-size: 15px;"> 
                    Looksy's Vote
                  </span>
                <% else %>
                <% end %>   
              </p>
            </div>
        </div>
      </div>
      <div class="col-xs-6" style="width:50%;">
        <div class="card">
          <img src="<%= cloudinary_url(style2_image, :crop=>"fit")%>" class="card-img-top">
            <div class="card-body">
              <p class="card-text">
                <% if vote1 == nil && vote2 ==nil %>
                  <form action="/insert_vote" method="post">
                    <input type="hidden" value="<%= post.id %>" name="post_id_from_query">
                    <input type="hidden" value="<%= post.outfit2_id %>" name="bestoutfit_id_from_query">   
                    <button class="button"> <i class="fas fa-heart" style="color:#D8BFD8; font-size:25px;"> </i> </button>
                  </form>
                <% elsif vote2 == nil %>
                  <i class="far fa-heart" style="color:#D8BFD8; font-size:25px;"> </i>
                <% elsif vote2 != nil %>
                  <i class="fas fa-heart" style="color:#D8BFD8; font-size:30px;"> </i>
                <% end %>
              </p>
              <p class="card-text">
                  <% if vote2_count > vote1_count %>
                    <span style="font-family:'Nunito', sans-serif; color:#D8BFD8; font-weight: bold; font-size: 15px;"> 
                      Looksy's Vote 
                    </span>
                  <% else %>
                  <% end %>   
              </p>
            </div>
        </div>
      </div>
  <% end %>
</div>
</div>