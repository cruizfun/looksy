<style>

.flex-panel {
   display: flex;
   width: 400px;
   padding-top: 60px;
   padding-bottom: 90px;
   height: 455px;
   border: thin Silver solid;
   flex-wrap: wrap;
   flex-direction: column;
   justify-content: space-between;
   align-items: center;  
}

.flex-logo-header {
   display: inline-flex;
   width: 400px;
   height: 40px;
   padding-left: 40px;
   padding-right: 5px;
   padding-top: 5px;
   padding-bottom: 5px;
   flex-wrap: nowrap;
   flex-direction: column;
   justify-content: left;
   align-items: left;
   font-family: 'Montserrat', sans-serif;
   font-size: 14px;
}

.flex-header {
   display: inline-flex;
   width: 400px;
   height: 40px;
   padding-left: 5px;
   padding-right: 5px;
   padding-top: 25px;
   padding-bottom: 5px;
   flex-wrap: nowrap;
   flex-direction: row;
   justify-content: left;
   align-items: center;
   font-family: 'Montserrat', sans-serif;
   font-size: 12px;
   font-weight: bold;
}

.flex-sign-in {
   display: inline-flex;
   width: 400px;
   height: 40px;
   padding-left: 5px;
   padding-right: 5px;
   padding-top: 5px;
   padding-bottom: 5px;
   flex-wrap: nowrap;
   flex-direction: row;
   justify-content: left;
   align-items: center;
   font-family: 'Montserrat', sans-serif;
   font-size: 12px;
}

.btn {
  
  background-color: Thistle; /* Blue background */
  border: none; /* Remove borders */
  color: white; /* White text */
  font-size: 14px; /* Set a font size */
  cursor: pointer; /* Mouse pointer on hover */
  font-family: 'Montserrat', sans-serif;
  width: 160px;
}

.btn:hover {
  background-color: Orchid;
}
</style>

<div class="flex-panel">
  <div class="flex-logo-header">
      <span style="text-align:left; text-weight:bold;">
        Upload a new post
      </span>
  </div>

  <div class="flex-header">
    <div class="alert" style="font-size: 12px; color: Tomato;">
      <%= alert %>
    </div>
  </div>
  
  <form action="/insert_post" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="flex-item">
      <form action="/insert_post" method="post" class="form-horizontal" enctype="multipart/form-data">
      <label for="outfit1_box" style="font-size:80%; font-family: 'Montserrat', sans-serif;"> Outfit 1 </label>
      <input type="file" id="outfit1_box" name="outfit1_from_query" class="form-control" 
        style="font-size:80%; font-family: 'Montserrat', sans-serif;">
    </div>
    <div class="flex-item">
      <label for="outfit2_box" style="font-size:80%; font-family: 'Montserrat', sans-serif;"> Outfit 2 </label>
        <input type="file" id="outfit2_box" name="outfit2_from_query" class="form-control"
          style="font-size:80%; font-family: 'Montserrat', sans-serif;">
    </div>
    <div class="flex-item">
      <label for="event_box" style="font-size:80%; font-family: 'Montserrat', sans-serif;"> Event Type </label>
        <select id="event_box" name="event_type_from_query" style="font-size:80%; font-family: 'Montserrat', sans-serif;">
          <option disabled selected value> -- select an option -- </option>
          <option value="Date"> Date </option>
          <option value="Professional"> Professional </option>
          <option value="Casual"> Casual </option>
          <option value="Formal"> Formal </option>
        </select>
    </div>
    <div class="flex-item">
      <button type="submit" class="btn">
        Create post
      </button>
    </div>
  </form>

</div>
