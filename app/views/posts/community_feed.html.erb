<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Style Feed
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table" border="1">
          <td>Rosey User
          </td>
          
          <td>
          Look 1
          </td>

          <td>
            Your Vote
          </td>

          <td>
            Rosey Community Vote
          </td>

          <td>
            Look 2
          </td>
          
          <td>
          Your Vote
          </td>

          <td>
            Rosey Community Vote
          </td>

          <td>
            Created
          </td>

    <% @posts.each do |post| %>
        <% vote1 = Vote.where({ :voter_id => @current_user.id, :bestoutfit_id => post.outfit1_id }).first %>
        <% vote2 = Vote.where({ :voter_id => @current_user.id, :bestoutfit_id => post.outfit2_id }).first %>

        <% vote1_count = Vote.where({ :bestoutfit_id => post.outfit1_id }).all.count %>
        <% vote2_count = Vote.where({ :bestoutfit_id => post.outfit2_id }).all.count %>

      <tr>
        <td>
          <%= @current_user.username %>
        </td>
        <td>
          <img height=100 src="<%= post.outfit1_id %>" class="img-responsive">
        </td>
        <td>
          <% if vote1 == nil && vote2 == nil %>
            <form action="/insert_like" method="post">
              <input type="hidden" value="<% @current_user.id %>" name="liker_id_from_query">
              <input type="hidden" value="<% post.id %>" name="post_id_from_query">
              <input type="hidden" value="<% post.outfit1_id_identifier %>" name="chosen_outfit_from_query">
                <colspan="2" width="50" align="center">
                  <a href="/feed">
                    <span style="font-size: 30px; color: Indigo;">
                    <i class="fas fa-grin-hearts"></i>
                    </span>
                  </a>
            </form>
        </td>

        <td>
          <% elsif vote1 != nil %>
          You upvoted this look!
        </td>
              
        <% else %>
          <td> 100 </td>
        <% end %>

        <% if vote1_count > vote2_count %>

        <td>
        Rosey loves this look!
        </td>

        <% else %>
          <td></td>
        <% end %>

        <td>
          <img height=100 src="<%= post.outfit2_id %>" class="img-responsive">
        </td>
 
        <td>
        <% if vote1 == nil && vote2 ==nil %>
          <form action="/insert_like" method="post">
            <input type="hidden" value="<% @current_user.id %>" name="liker_id_from_query">
            <input type="hidden" value="<% post.id %>" name="post_id_from_query">
            <input type="hidden" value="<% post.outfit2_id_identifier %>" name="chosen_outfit_from_query">
                <colspan="2" width="50" align="center">
                  <a href="/feed">
                    <span style="font-size: 30px; color: Indigo;">
                    <i class="fas fa-grin-hearts"></i>
                    </span>
                  </a>
          </form>
        </td>

        <td>
        <% elsif vote2 != nil %>
          You upvoted this look!
        </td>

        <td>
          <% else %>
          <% end %>
        </td>

        <td>
          <% if vote2_count > vote1_count %>
            Rosey loves this look!
        </td>

        <td>
          <% else %>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(post.created_at) %> ago
        </td>

      </tr>
    <% end %>
    </table>
  </div>
</div>

<hr>