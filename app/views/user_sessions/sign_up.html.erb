<h1>Sign up</h1>

<form action="/post_user" method="post" class="form-horizontal" enctype="multipart/form-data">

  <div>
    <label for="email_box">Email</label>
    <input id="email_box" name="email_from_query" placeholder="Choose a email..." type="text">
  </div>
                 
  <div>
    <label for="username_box">Username</label>
      
    <input type="text" id="username_box" name="username_from_query">
  </div>
         
  <div>
    <label for="bra_size_box">Bra size</label>
      
    <select id="bra_size_box" name="bra_size_from_query">
      <option value="32B"> 32B </option>
      <option value="32C"> 32C </option>
    </select>
  </div>
         
  <div>
    <label for="top_size_box">Top size</label>
      
    <select id="top_size_box" name="top_size_from_query">
      <option value="0"> 0 </option>
      <option value="2"> 2 </option>
    </select>
  </div>
         
  <div>
    <label for="dress_size_box">Dress size</label>
      
    <select id="dress_size_box" name="dress_size_from_query">
      <option value="0"> 0 </option>
      <option value="2"> 2 </option>
    </select>
  </div>
         
  <div>
    <label for="pant_size_box">Pant size</label>
      
    <select id="pant_size_box" name="pant_size_from_query">
      <option value="0"> 0 </option>
      <option value="2"> 2 </option>
    </select>
  </div>
         
  <div class="form-group">
      <label for="headshot_id_box"> Choose a profile picture </label>
      <input type="file" id="headshot_id_box" name="headshot_id_from_query" class="form-control" height=100>
  </div>
         
  <div>
    <label for="shoe_size_box">Shoe size</label>
      
    <select id="shoe_size_box" name="shoe_size_from_query">
      <option value="6.5"> 6.5 </option>
      <option value="7"> 7 </option>
    </select>
  </div>
    
  <div>
    <label for="password_box">Password</label>
    <input id="password_box" name="password_from_query" placeholder="Choose a password..." type="password">
  </div>

  <div>
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="password_confirmation_from_query" placeholder="Confirm your password..." type="password">
  </div>

  <button>
    Sign up
  </button>
</form>

<hr>

<p>
  Or, <a href="/sign_in"> Sign in</a> instead.
</p>
