<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all headshots
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new headshot
    </h2>

    <form action="/insert_headshot" method="post">
      <div class="form-group">
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="image_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create headshot
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @headshots.each do |headshot| %>
      <tr>
        <td>
          <%= headshot.id %>
        </td>

        <td>
          <%= headshot.image %>
        </td>

        <td>
          <%= time_ago_in_words(headshot.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(headshot.updated_at) %> ago
        </td>

        <td>
          <a href="/headshots/<%= headshot.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
