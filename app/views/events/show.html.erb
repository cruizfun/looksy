<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Event #<%= @event.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/events" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_event/<%= @event.id %>" class="btn btn-block btn-outline-secondary">
          Delete event
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Tag
      </dt>
      <dd>
        <%= @event.tag %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@event.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@event.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit event
    </h2>

    <form action="/modify_event/<%= @event.id %>"  method="post" >
      <div class="form-group">
        <label for="tag_box">
          Tag
        </label>

        <input type="text" id="tag_box" name="tag_from_query" class="form-control" value="<%= @event.tag %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update event
      </button>
    </form>
  </div>
</div>

<hr>
