<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Connect Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <script src="https://kit.fontawesome.com/e8d4476375.js" crossorigin="anonymous"></script>


    <!-- Connect Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.4.1/minty/bootstrap.min.css">

    <!-- Connect Bootstrap JavaScript and its dependencies -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>


  <body>
    <nav>
    <% if @current_user == nil %>
            <div>
              <a href="/sign_up">
                <i class="fas fa-users"></i>
                Sign up
              </a>
            </div>

            <div>
              <a href="/sign_in">
                <i class="fas fa-users"></i>
                Sign in
              </a>
            </div>
      
          <% else %>

          <div>
            <a href="/edit_user">
              <i class="fas fa-users"></i>
              Edit Your Profile
            </a>
          </div>

          <div>
            <a href="/feed/<%=@current_user.username%>">
              <i class="fas fa-users"></i>
              Go to your feed
            </a>
          </div>

          <div>
            <a href="/feed">
              <i class="fas fa-users"></i>
              Rosey Style Feed
            </a>
          </div>

          <div>
            <a href="/sign_out">
              <i class="fas fa-users"></i>
              Sign out
            </a>
          </div>
        
      <% end %> 

    </nav>

  <div class="alert" style="font-size: 20px; color: Tomato;">
  <%= alert %>
  </div>

  <div class="notice" style="font-size: 20px; color: MediumSeaGreen;">
  <%= notice %>
  </div>

    <%= yield %>
  </body>
</html>
